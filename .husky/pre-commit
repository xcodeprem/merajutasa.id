#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Secret scanning pre-commit hook
echo "ğŸ” Running secret scan on staged files..."

# Check if gitleaks is available
if ! command -v gitleaks &> /dev/null; then
    echo "âš ï¸  Warning: gitleaks not found. Installing via npm..."
    if command -v npm &> /dev/null; then
        npx --yes gitleaks protect --staged --config=.gitleaks.toml --verbose
    else
        echo "âŒ Neither gitleaks nor npm found. Please install gitleaks: https://github.com/gitleaks/gitleaks"
        exit 1
    fi
else
    gitleaks protect --staged --config=.gitleaks.toml --verbose
fi

if [ $? -ne 0 ]; then
    echo ""
    echo "ğŸš¨ SECRET DETECTED IN STAGED FILES!"
    echo "ğŸ’¡ Please review and remove secrets before committing."
    echo "ğŸ“– See SECURITY.md for secret handling guidelines."
    exit 1
fi

echo "âœ… No secrets detected in staged files"