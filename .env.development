# Development Environment Configuration
# This file contains development-specific overrides for .env.example
# Load this after .env.example for development environments

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
DEBUG=merajutasa:*
ENABLE_DEBUG_LOGS=true

# =============================================================================
# DEVELOPMENT PORTS (Allow conflicts with other services)
# =============================================================================
# Core Services - Use default ports for dev
SIGNER_PORT=4601
CHAIN_PORT=4602
COLLECTOR_PORT=4603

# Development-specific service ports
HA_ORCHESTRATOR_PORT=8090
OBSERVABILITY_PORT=8080
API_GATEWAY_PORT=8086
COMPLIANCE_ORCHESTRATOR_PORT=9000

# =============================================================================
# DEVELOPMENT INFRASTRUCTURE
# =============================================================================
# Use local Redis for development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Local SMTP for development (use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# =============================================================================
# DEVELOPMENT PERFORMANCE SETTINGS
# =============================================================================
# Faster intervals for development
HEALTH_CHECK_INTERVAL=10
METRICS_INTERVAL=10
CACHE_TTL=60
HA_COORDINATION_INTERVAL=15000
HA_HEALTH_CHECK_INTERVAL=30000

# Lower resource limits for development
AUTO_SCALING_MIN_INSTANCES=1
AUTO_SCALING_MAX_INSTANCES=3
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# DEVELOPMENT FEATURE FLAGS
# =============================================================================
FEATURE_HA_ENABLED=true
FEATURE_OBSERVABILITY_ENABLED=true
FEATURE_COMPLIANCE_ENABLED=true
FEATURE_API_GATEWAY_ENABLED=true
FEATURE_PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# DEVELOPMENT SECURITY (Relaxed for development)
# =============================================================================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=1000
SESSION_TIMEOUT=7200

# =============================================================================
# DEVELOPMENT DEPLOYMENT
# =============================================================================
DEPLOYMENT_MODE=development
BUILD_VERSION=dev-local