# Production Environment Configuration
# This file contains production-specific overrides for .env.example
# Load this after .env.example for production environments

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
NODE_ENV=production
LOG_LEVEL=warn
DEBUG=
ENABLE_DEBUG_LOGS=false

# =============================================================================
# PRODUCTION PORTS
# =============================================================================
# Core Services - Use standard ports
SIGNER_PORT=4601
CHAIN_PORT=4602
COLLECTOR_PORT=4603

# Production service ports
HA_ORCHESTRATOR_PORT=8090
OBSERVABILITY_PORT=8080
API_GATEWAY_PORT=8086
COMPLIANCE_ORCHESTRATOR_PORT=9000

# =============================================================================
# PRODUCTION INFRASTRUCTURE
# =============================================================================
# Production Redis cluster (configure based on your setup)
REDIS_HOST=redis-cluster.internal
REDIS_PORT=6379
# REDIS_PASSWORD=<set-in-secrets>

# Production SMTP (configure based on your email provider)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
# SMTP_USER=<set-in-secrets>
# SMTP_PASS=<set-in-secrets>
SMTP_FROM=alerts@merajutasa.id

# =============================================================================
# PRODUCTION PERFORMANCE SETTINGS
# =============================================================================
# Standard intervals for production
HEALTH_CHECK_INTERVAL=30
METRICS_INTERVAL=30
CACHE_TTL=600

# Production resource scaling
AUTO_SCALING_MIN_INSTANCES=3
AUTO_SCALING_MAX_INSTANCES=50
AUTO_SCALING_TARGET_CPU=70
DB_POOL_MIN=10
DB_POOL_MAX=100

# =============================================================================
# PRODUCTION FEATURE FLAGS
# =============================================================================
FEATURE_HA_ENABLED=true
FEATURE_OBSERVABILITY_ENABLED=true
FEATURE_COMPLIANCE_ENABLED=true
FEATURE_API_GATEWAY_ENABLED=true
FEATURE_PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# PRODUCTION SECURITY (Strict)
# =============================================================================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=3600
MAX_REQUEST_SIZE=10485760

# =============================================================================
# PRODUCTION ALERTING
# =============================================================================
ENABLE_ALERTS=true
ALERT_THRESHOLDS_P95=200
ALERT_THRESHOLDS_P99=500
ALERT_AVAILABILITY=99.9
# SLACK_WEBHOOK_URL=<set-in-secrets>

# =============================================================================
# PRODUCTION BACKUP & RECOVERY
# =============================================================================
DR_BACKUP_SCHEDULE=0 2 * * *
DR_RETENTION_DAYS=90
DR_CROSS_REGION_REPLICATION=true

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
DEPLOYMENT_MODE=production
PRIMARY_REGION=us-east-1
SECONDARY_REGIONS=us-west-2,eu-west-1
DEPLOYMENT_STRATEGY=blue-green