{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://merajutasa.id/schemas/architecture/dependencies-v1.schema.json",
  "title": "Component Dependency Matrix",
  "description": "Machine-readable dependency matrix for visualization tools and automated analysis",
  "type": "object",
  "required": ["version", "generated_at", "metadata", "nodes", "edges"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "required": ["total_components", "total_dependencies", "source"],
      "properties": {
        "total_components": {
          "type": "integer",
          "minimum": 0
        },
        "total_dependencies": {
          "type": "integer",
          "minimum": 0
        },
        "circular_dependencies": {
          "type": "integer",
          "minimum": 0
        },
        "source": {
          "type": "string"
        },
        "generator": {
          "type": "string"
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "criticality"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "criticality": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependents": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "type"],
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["dependency", "optional", "peer"]
          },
          "criticality": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          }
        }
      }
    },
    "analysis": {
      "type": "object",
      "properties": {
        "circular_dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "critical_path": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isolated_components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "highly_dependent": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}