{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "secrets-rotation-evidence-v1.json",
  "title": "Secrets Rotation Evidence v1",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "category": { "type": "string" },
        "name": { "type": "string" },
        "generated_utc": { "type": "string" }
      },
      "required": ["category", "name"]
    },
    "domain": { "type": "string" },
    "run_at_utc": { "type": "string" },
    "policy": {
      "type": "object",
      "properties": {
        "dek_rotation_days": { "type": "number", "minimum": 1 },
        "kek_rotation_days": { "type": "number", "minimum": 1 }
      },
      "required": ["dek_rotation_days", "kek_rotation_days"]
    },
    "algorithms": {
      "type": "object",
      "properties": {
        "kek": { "type": "string" },
        "dek": { "type": "string" }
      },
      "required": ["kek", "dek"]
    },
    "results": {
      "type": "object",
      "properties": {
        "unwrap_dek1_ok": { "type": "boolean" },
        "unwrap_dek2_ok": { "type": "boolean" },
        "reencrypt_ok": { "type": "boolean" }
      },
      "required": ["unwrap_dek1_ok", "unwrap_dek2_ok", "reencrypt_ok"]
    },
    "active_dek_id": { "type": "string" },
    "previous_dek_id": { "type": "string" }
  },
  "required": ["domain", "run_at_utc", "policy", "algorithms", "results", "active_dek_id", "previous_dek_id"]
}
